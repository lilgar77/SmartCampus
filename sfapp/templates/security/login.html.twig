{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <section class="d-flex justify-content-center align-items-center"
             style="height: 50vh; margin: 20px;">
        <div class="card shadow p-4" style="width: 400px; border-radius: 15px;">
            <div class="card-body">
                <h1 class="h4 text-center mb-4" style="color: #6a0dad;">Connexion</h1>

                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3 text-center">
                            Vous êtes connecté(e) comme <strong>{{ app.user.username }}</strong>.
                            <a href="{{ path('app_logout') }}" style="color: #6a0dad;">Me déconnecter</a>
                        </div>
                    {% endif %}

                    <div class="mb-3">
                        <label for="inputUsername" class="form-label">Nom utilisateur</label>
                        <input type="text" value="{{ last_username }}" name="usename" id="inputUsername"
                               class="form-control" autocomplete="username" required autofocus>
                    </div>

                    <div class="mb-3">
                        <label for="inputPassword" class="form-label">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword"
                               class="form-control" autocomplete="current-password" required>
                    </div>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    <div class="text-center">
                        <button class="btn btn-lg btn-block mt-3"
                                style="background-color: #6a0dad; color: #fff;" type="submit">
                            Connexion
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </section>
{% endblock %}