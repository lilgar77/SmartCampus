{% extends 'base.html.twig' %}

{% block title %}Ajouter une Salle{% endblock %}

{% block body %}


    <div class="container mt-5">
        <div class="card shadow-sm p-4">
            <h2 class="text-center mb-4">Ajouter une Salle</h2>

            {{ form_start(roomForm) }}
            <div class="mb-3">
                {{ form_label(roomForm.name, 'Nom de la salle', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(roomForm.name, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(roomForm.name, {'attr': {'class': 'text-danger'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(roomForm.id_AS, 'ID de l\'AS', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(roomForm.id_AS, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(roomForm.id_AS, {'attr': {'class': 'text-danger'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(roomForm.floor, 'Etage', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(roomForm.floor, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(roomForm.floor, {'attr': {'class': 'text-danger'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(roomForm.building, 'Batiment', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(roomForm.building, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(roomForm.building, {'attr': {'class': 'text-danger'}}) }}
            </div>

            <div class="text-center">
                <button type="submit" class="btn" style="background-color: #6a0dad; color: #fff;">Ajouter une Salle</button>
            </div>
            {{ form_end(roomForm) }}
        </div>
    </div>

{% endblock %}