{% extends 'base.html.twig' %}

{% block title %}Hello RoomsController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">

        This friendly message is coming from:
        <ul>
            <li>Your controller at <code>/app/sfapp/src/Controller/RoomsController.php</code></li>
            <li>Your template at <code>/app/sfapp/templates/rooms/add.html.twig</code></li>
        </ul>

        <table>
            <thead>
            <tr>
                <th>ID</th>
                <th>NAME</th>
            </tr>
            </thead>
            <tbody>
            {% for room in rooms %}
                <tr>
                    <td>{{ room.id }}</td>
                    <td>{{ room.name }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
