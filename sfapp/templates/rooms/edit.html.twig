{% extends 'base.html.twig' %}

{% block title %}Modifier la Salle - {{ room.name }}{% endblock %}

{% block body %}

    <div class="container mt-5">
        <div class="card shadow-sm p-4">
            <h2 class="text-center mb-4">Modifier la Salle "{{ room.name }}"</h2>
            <p class="text-muted text-center">Ce formulaire vous permet de modifier les informations de la salle.</p>

            <div class="row justify-content-center">
                <div class="col-md-8">
                    {{ form_start(roomForm) }}
                    <div class="mb-3">
                        {{ form_label(roomForm.name, 'Nom de la salle', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(roomForm.name, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(roomForm.id_AS, 'ID de l\'AS', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(roomForm.id_AS, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(roomForm.floor, 'Etage', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(roomForm.floor, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(roomForm.building, 'Batiment', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(roomForm.building, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn" style="background-color: #6a0dad; color: #fff;">Sauvegarder les modifications</button>
                    </div>
                    {{ form_end(roomForm) }}
                </div>
            </div>

            <div class="mt-4 text-center">
                <a href="{{ path('app_rooms') }}" class="btn btn-secondary">Retour Ã  la liste des salles</a>
            </div>
        </div>
    </div>
{% endblock %}