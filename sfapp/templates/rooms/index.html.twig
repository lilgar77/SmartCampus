{% extends 'base.html.twig' %}

{% block title %}Gestion des Salles{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg table-violet navbar-custom background-container">
        <div class="container-fluid justify-content-center ">
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto ms-auto">
                    <li class="nav-item me-3">
                        <a class="nav-link text-dark text-decoration-underline active" aria-current="page" href="{{ path('app_rooms') }}">Salles</a>
                    </li>
                    <li class="nav-item me-3">
                        <a class="nav-link text-white" href="{{ path('app_acquisition_syteme_liste') }}">Systèmes d'acquisition</a>
                    </li>
                    <li class="nav-item me-3">
                        <a class="nav-link text-white" href="{{ path('app_building') }}">Bâtiments</a>
                    </li>
                    <li class="nav-item me-3">
                        <a class="nav-link text-white" href="{{ path('app_floor') }}">Etages</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4 ">
        <div class="card shadow-sm p-4 ">
            <h1 class="h3 mb-4 text-center background-container">Liste des Salles</h1>

            <!-- Flash Messages -->
            {% for type, messages in app.flashes %}
                <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                    {% for message in messages %}
                        {{ message }}
                    {% endfor %}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            <!-- Fin Flash Messages -->

            <!-- Barre de recherche -->
            <div class="d-flex justify-content-center mb-4 background-container">
                {{ form_start(room, { 'attr': {'class': 'd-flex w-50 align-items-center'} }) }}
                <div class="input-group" style="border-radius: 25px; box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.1);">
                    <span class="input-group-text" style="border-radius: 25px 0 0 25px; background-color: #6a0dad; color: #fff;">
                        <i class="bi bi-search"></i>
                    </span>
                    {{ form_widget(room.name, { 'attr': {'class': 'form-control', 'placeholder': 'Rechercher une salle...', 'style': 'border: none; border-radius: 0 25px 25px 0;'} }) }}
                </div>
                <button type="submit" class="btn ms-2"
                        style="background-color: #6a0dad; color: #fff; border-radius: 25px; box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.1);">
                    Rechercher
                </button>
                {{ form_end(room) }}

                    <a href="{{ path('app_room_add') }}" class="ms-4 background-container">
                        <button type="button" class="btn btn-violet text-white">Ajouter une Salle</button>
                    </a>
            </div>
            <!-- Fin Barre de recherche -->

            <!-- Tableau des salles -->
            <div class="table-responsive background-container" style="max-height: 372px; overflow-y: auto;">
                <table class="table table-striped table-bordered">
                    <thead class="table-violet sticky-header">
                    <tr>
                        <th scope="col">NOM</th>
                        <th scope="col">NOM DU SA RELIÉ</th>
                        <th scope="col">ETAGE / BATIMENT</th>
                        <th scope="col">ACTIONS</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for room in rooms %}
                        <tr>
                            <td>{{ room.name }}</td>
                            <td>{{ room.idAS is not null ? room.idAS.name : 'N/A' }}</td>
                            <td>{{ room.floor.numberFloor}}- {{room.building.NameBuilding }} ( {{room.building.AdressBuilding}} )</td>
                            <td>
                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal{{ room.id }}">
                                    Supprimer
                                </button>
                                <a href="{{ path('app_room_edit', {id: room.id}) }}" class="btn btn-warning">
                                    Modifier
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <!-- Fin Tableau des salles -->


            <!-- Modals de confirmation -->
            {% for room in rooms %}
                <div class="modal fade" id="deleteModal{{ room.id }}" tabindex="-1" aria-labelledby="deleteModalLabel{{ room.id }}" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="deleteModalLabel{{ room.id }}">Confirmer la suppression</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Êtes-vous sûr de vouloir supprimer la salle "{{ room.name }}" ?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                <form action="{{ path('app_room_delete', {id: room.id}) }}" method="POST" style="display: inline;">
                                    <button type="submit" class="btn btn-danger">Supprimer</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
            <!-- Fin Modals -->
        </div>
    </div>
{% endblock %}