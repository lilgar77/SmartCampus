{% extends 'base.html.twig' %}

{% block title %}Gestion des Salles{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg table-violet table-responsive navbar-custom">
        <div class="container-fluid justify-content-center">
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto ms-auto">
                    <li class="nav-item me-3">  <!-- Utilisation de me-3 pour espacer -->
                        <a class="nav-link text-dark text-decoration-underline active" aria-current="page" href="{{ path('app_rooms') }}">Salles</a>
                    </li>
                    <li class="nav-item me-3">
                        <a class="nav-link text-white" href="{{  path('liste_app_acquisition_syteme') }}">Systèmes d'acquisition</a>
                    </li>
                    <li class="nav-item me-3">
                        <a class="nav-link text-white" href="{{ path('app_building') }}">Bâtiments</a>
                    </li>
                    <li class="nav-item me-3">
                        <a class="nav-link text-white" href="{{ path('app_floor') }}">Etages</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-4">
        <div class="card shadow-sm p-4">
            <h1 class="h3 mb-4 text-center">Liste des Salles</h1>

            <!-- Barre de recherche avec bordure et alignement centré -->
            <div class="d-flex justify-content mb-4">
                {{ form_start(room, { 'attr': {'class': 'd-flex w'} }) }}
                {{ form_widget(room, { 'attr': {'class': 'form-control me-2'} }) }}
                <button type="submit" class="btn" style="background-color: #6a0dad; color: #fff;">Rechercher</button>
                {{ form_end(room) }}
            </div>

            <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
                <table class="table table-striped table-bordered">
                    <thead class="table-violet sticky-header">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">NOM</th>
                        <th scope="col">ETAGE</th>
                        <th scope="col">BATIMENT</th>
                        <th scope="col">ACTIONS</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for room in rooms %}
                        <tr>
                            <td>{{ room.id }}</td>
                            <td>{{ room.name }}</td>
                            <td>{{ room.floor.numberFloor }}</td>
                            <td>{{ room.building.NameBuilding }}</td>
                            <td>
                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal{{ room.id }}">
                                    Supprimer
                                </button>
                                <a href="{{ path('app_room_edit', {id: room.id}) }}" class="btn btn-warning">
                                    Modifier
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-end mt-3">
                <a href="{{ path('app_room_add') }}">
                    <button type="button" class="btn" style="background-color: #6a0dad; color: #fff;">Ajouter une Salle</button>
                </a>
            </div>

            {% for room in rooms %}
                <div class="modal fade" id="deleteModal{{ room.id }}" tabindex="-1" aria-labelledby="deleteModalLabel{{ room.id }}" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="deleteModalLabel{{ room.id }}">Confirmer la suppression</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Êtes-vous sûr de vouloir supprimer la salle "{{ room.name }}" ?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                <form action="{{ path('app_room_delete', {id: room.id}) }}" method="POST" style="display: inline;">
                                    <button type="submit" class="btn btn-danger">Supprimer</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}