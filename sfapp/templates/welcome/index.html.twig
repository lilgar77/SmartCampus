{% extends 'base.html.twig' %}

{% block title %}Welcome to Smart Campus{% endblock %}

{% block head %}
{% endblock %}

{% block body %}

    <!-- Contenu principal centré -->
    <div class="d-flex justify-content-center align-items-center vh-60 flex-column">
        <h1>Dashboard Smart Campus</h1>
    </div>

    <div class="container mt-4">
        <div class="card shadow-sm p-4">
            <h1 class="h3 mb-4 text-center background-container">Liste des Salles</h1>

            <div class="container">
                <div class="row">
                    {% for roomInfo in roomsWithLastCaptures %}
                        <div class="col-12 col-md-4 mb-4">
                            <div class="room-card card shadow-sm" data-bs-toggle="modal" data-bs-target="#deleteModal{{ roomInfo.room.id }}">
                                <div class="card-body">
                                    <h5 class="card-title">{{ roomInfo.room.name }}</h5>
                                    <p class="card-text">
                                        <strong>Relier à:</strong> {{ roomInfo.room.idAS is not null ? roomInfo.room.idAS.name : 'N/A' }}<br>
                                        <strong>Étage:</strong> {{ roomInfo.room.floor.numberFloor }}<br>
                                        <strong>Bâtiment:</strong> {{ roomInfo.room.building.NameBuilding }} ({{ roomInfo.room.building.AdressBuilding }})<br>
                                    </p>

                                    <div class="mt-3">
                                        <div class="row">
                                            <div class="col">
                                                <strong>Température:</strong>
                                                <span>{{ roomInfo.lastCaptures.temp ?? 'N/A' }} °C</span>
                                            </div>
                                            <div class="col">
                                                <strong>Humidité:</strong>
                                                <span>{{ roomInfo.lastCaptures.hum ?? 'N/A' }}%</span>
                                            </div>
                                            <div class="col">
                                                <strong>CO2:</strong>
                                                <span>{{ roomInfo.lastCaptures.co2 ?? 'N/A' }} ppm</span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-between align-items-center mt-3">
                                        <a href="{{ path('app_welcome_details', {id: roomInfo.room.id}) }}" class="btn btn-dark table-violet">Détails</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}