<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Smart Campus !{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">



    {% block stylesheets %}
        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
        <!-- Custom Stylesheet -->
        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    {% endblock %}

    {% block javascripts %}
        <!-- Import Bootstrap Bundle JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Import custom JS -->
        {{ importmap("room") }}
    {% endblock %}
</head>

    <div class="position-fixed top-0 start-0 quarter-circle-start background-container"></div>
    <div class="position-fixed bottom-0 end-0 quarter-circle-end background-container"></div>

    <div class="d-flex justify-content-end align-items-center p-3">
        <!-- Login/Logout -->
        <div class="loginlogout me-3">
            {% if app.user %}
                <span class="me-2">{{ app.user.username }}</span>
                <a href="{{ path('app_logout') }}" class="text-link
                {% if app.request.attributes.get('_route') == 'app_login' %}text-dark text-decoration-underline active{% endif %}">Déconnexion</a>
            {% else %}
                <a href="{{ path('app_login') }}" class="text-link
                {% if app.request.attributes.get('_route') == 'app_login' %}text-dark text-decoration-underline active{% endif %}">Connexion</a>
            {% endif %}
        </div>
        <!-- User Icon -->
        <div class="icon">
            <i class="bi bi-person" style="font-size: 5rem;"></i>
        </div>
    </div>

    <div class="d-flex justify-content-center align-items-center vh-0">
        <img src="{{ asset('images/logo.png') }}" alt="Logo du campus">
    </div>
    <div class="container-fluid d-flex justify-content-center p-3">
        <a href="{{ path('app_welcome') }}" class="mx-3 text-link
        {% if app.request.attributes.get('_route') == 'app_welcome' %}text-dark text-decoration-underline active{% endif %}">Accueil</a>

        <a href="{{ path('app_rooms') }}" class="mx-3 text-link
         {% if app.request.attributes.get('_route') starts with 'app_acquisition_syteme'
            or app.request.attributes.get('_route') starts with 'app_building'
            or app.request.attributes.get('_route') starts with 'app_floor'
            or app.request.attributes.get('_route') starts with 'app_room'%}text-dark text-decoration-underline active{% endif %}">Gestion</a>
    </div>
<body>
{% block body %}

{% endblock %}
</body>
</html>