{% extends 'base.html.twig' %}

{% block title %}Messagerie du technicien{% endblock %}

{% block body %}
    <div class="background-container">
        <div class="container mt-4">
            <div class="card shadow-sm p-4">
                <h1 class="h3 mb-4 text-center">Messagerie du technicien</h1>

                <!-- Flash Messages -->
                {% for type, messages in app.flashes %}
                    <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                        {% for message in messages %}
                            {{ message }}
                        {% endfor %}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}

                <!-- Messages -->
                <div class="list-group">
                    {% for ins in installations %}
                        <a href="{{ path('app_technician_detail', {id: ins.id}) }}">
                            <div class="list-group-item list-group-item-action d-flex">
                                    <div class="me-3">
                                        <i class="bi bi-envelope-fill text-violet" style="font-size: 1.5rem;"></i>
                                    </div>

                                    <!-- Contenu du message -->
                                    <div class="message-content">
                                        <div class="fw-bold">{{ ins.AS }}</div>
                                        <div class="text-muted">Salle: {{ ins.Room }}</div>
                                        <div class="text-secondary">
                                            Veuillez cliquer pour suivre les Ã©tapes afin de finaliser l'installation du
                                            <strong>{{ ins.AS }}</strong> dans la salle <strong>{{ ins.Room }}</strong>.
                                        </div>
                                    </div>
                            </div>
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
