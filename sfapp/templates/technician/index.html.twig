{% extends 'base.html.twig' %}

{% block title %}Hello TechnicianController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    <div class="background-container">
        <div class="container mt-4">
            <div class="card shadow-sm p-4">
                <h1 class="h3 mb-4 text-center">Messagerie du technicien</h1>

                <!-- Flash Messages -->
                {% for type, messages in app.flashes %}
                    <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                        {% for message in messages %}
                            {{ message }}
                        {% endfor %}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
                <div class="table-responsive" style="max-height: 372px; overflow-y: auto;">
                    <table class="table table-striped table-bordered">
                        <thead class="table-violet sticky-header">
                        <tr>
                            <th scope="col">Système d'acquisition</th>
                            <th scope="col">Salle</th>
                            <th scope="col">Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for ins in installations %}
                            <tr>
                                <td>{{ ins.AS }}</td>
                                <td>{{ ins.Room }}</td>
                                <td><a href="{{ path('app_technician_detail', {id: ins.id}) }}" class="btn btn-warning">
                                        Détails
                                    </a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>



{% endblock %}