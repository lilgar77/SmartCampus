{% extends 'base.html.twig' %}

{% block title %}Messagerie du technicien{% endblock %}

{% block body %}
    <div class="background-container">
        <div class="container mt-4">
            <div class="card shadow-sm p-4">
                <h1 class="h3 mb-4 text-center">Messagerie du technicien</h1>

                <!-- Flash Messages -->
                {% for type, messages in app.flashes %}
                    <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                        {% for message in messages %}
                            {{ message }}
                        {% endfor %}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}

                <div class="card ">
                    {% for ins in installations %}
                        <a href="{{ path('app_technician_detail', {id: ins.id}) }}">
                            <div class="list-mail d-flex m-2">
                                    <div class="me-3">
                                        <i class="bi bi-envelope-fill text-violet" style="font-size: 1.5rem;"></i>
                                    </div>
                                    <div>
                                        <div class="fw-bold text-violet">{{ ins.AS }}</div>
                                        <div class="text-muted">Salle: {{ ins.Room }}</div>
                                        <div class="text-secondary">
                                           {{ ins.Comment }}
                                        </div>
                                    </div>
                            </div>
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
