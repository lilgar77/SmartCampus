{% extends 'base.html.twig' %}

{% block title %}Modifier AS - {{ acquisition_systems.macAdress }}{% endblock %}

{% block body %}
    <div class="position-absolute top-0 start-0 quarter-circle"></div>
    <div class="position-absolute bottom-0 end-0 quarter-circle"></div>

    <div class="d-flex justify-content-center align-items-center vh-0">
        <img src="{{ asset('images/logo.png') }}" alt="Logo du campus">
    </div>

    <div class="container-fluid d-flex justify-content-center p-3">
        <a href="{{ path('app_welcome') }}" class="mx-3 text-link">Accueil</a>
        <a href="{{ path('app_rooms') }}" class="mx-3 text-link">Plan</a>
    </div>

    <div class="container mt-5">
        <div class="card shadow-sm p-4" style="max-width: 800px; margin: auto;">
            <h2 class="text-center mb-3" style="font-size: 1.3rem;">Modifier AS "{{ acquisition_systems.macAdress }}"</h2>
            <p class="text-muted text-center" style="font-size: 0.9rem;">Ce formulaire vous permet de modifier les informations de AS.</p>

            <div class="row justify-content-center">
                <div class="col-12">
                    {{ form_start(ASForm) }}

                    <div class="mb-4">
                        {{ form_label(ASForm.macAdress, 'Mac Adresse', {'label_attr': {'style': 'font-size: 1rem; margin-bottom: 0.5rem;'}}) }}
                        {{ form_widget(ASForm.macAdress, {'attr': {'style': 'height: 40px; font-size: 1rem; width: 100%;'}}) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(ASForm.temperature, 'Température', {'label_attr': {'style': 'font-size: 1rem; margin-bottom: 0.5rem;'}}) }}
                        {{ form_widget(ASForm.temperature, {'attr': {'style': 'height: 40px; font-size: 1rem; width: 100%;'}}) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(ASForm.humidity, 'Humidité', {'label_attr': {'style': 'font-size: 1rem; margin-bottom: 0.5rem;'}}) }}
                        {{ form_widget(ASForm.humidity, {'attr': {'style': 'height: 40px; font-size: 1rem; width: 100%;'}}) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(ASForm.CO2, 'CO2', {'label_attr': {'style': 'font-size: 1rem; margin-bottom: 0.5rem;'}}) }}
                        {{ form_widget(ASForm.CO2, {'attr': {'style': 'height: 40px; font-size: 1rem; width: 100%;'}}) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(ASForm.etat, 'État', {'label_attr': {'style': 'font-size: 1rem; margin-bottom: 0.5rem;'}}) }}
                        {{ form_widget(ASForm.etat, {'attr': {'style': 'height: 40px; font-size: 1rem; width: 100%;'}}) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(ASForm.room, 'Salle', {'label_attr': {'style': 'font-size: 1rem; margin-bottom: 0.5rem;'}}) }}
                        {{ form_widget(ASForm.room, {'attr': {'style': 'height: 40px; font-size: 1rem; width: 100%;'}}) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(ASForm.wording, 'Libellé', {'label_attr': {'style': 'font-size: 1rem; margin-bottom: 0.5rem;'}}) }}
                        {{ form_widget(ASForm.wording, {'attr': {'style': 'height: 40px; font-size: 1rem; width: 100%;'}}) }}
                    </div>

                    <div class="text-center mt-3">
                        <button type="submit" class="btn" style="background-color: #6a0dad; color: #fff; font-size: 1rem; padding: 0.75rem 2rem;">Sauvegarder les modifications</button>
                    </div>

                    {{ form_end(ASForm) }}
                </div>
            </div>

            <div class="mt-3 text-center">
                <a href="{{ path('liste_app_acquisition_syteme') }}" class="btn btn-secondary btn-sm">Retour à la liste des AS</a>
            </div>
        </div>
    </div>
{% endblock %}