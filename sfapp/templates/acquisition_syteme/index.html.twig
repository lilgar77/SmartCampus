

{% extends 'base.html.twig' %}

{% block title %}Gestion des Système d'acqisition{% endblock %}

{% block body %}

    <nav class="navbar navbar-expand-lg table-violet table-responsive navbar-custom">
        <div class="container-fluid justify-content-center">
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto ms-auto">
                    <li class="nav-item me-3">  <!-- Utilisation de me-3 pour espacer -->
                        <a class="nav-link text-white" aria-current="page" href="{{ path('app_rooms') }}">Salles</a>
                    </li>
                    <li class="nav-item me-3">
                        <a class="nav-link text-dark text-decoration-underline active" href="{{  path('liste_app_acquisition_syteme') }}">Systèmes d'acquisition</a>
                    </li>
                    <li class="nav-item me-3">
                        <a class="nav-link text-white" href="{{ path('app_building') }}">Bâtiments</a>
                    </li>
                    <li class="nav-item me-3">
                        <a class="nav-link text-white" href="{{ path('app_floor') }}">Etages</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="card shadow-sm p-4">
            <h1 class="h3 mb-4 text-center">Liste des Système d'acquisition</h1>

            <!-- Conteneur scrollable pour le tableau uniquement -->
            <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
                <table class="table table-striped table-bordered">
                    <thead class="table-violet sticky-header">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Nom</th>
                        <th scope="col">etat</th>
                        <th scope="col">temperature</th>
                        <th scope="col">CO2</th>
                        <th scope="col">humidity</th>
                        <th scope="col">Adresse Mac</th>
                        <th scope="col">Room associate</th>
                        <th scope="col">ACTIONS</th>
                    </tr>
                    </thead>
                    <tbody>
                        {%for AS in acquisition_systems%}
                            <tr>
                                <td>{{ AS.id }}</td>
                                <td>{{ AS.name }}</td>
                                <td>{{ AS.etat.value }}</td>
                                <td>{{ AS.temperature }}</td>
                                <td>{{ AS.CO2 }}</td>
                                <td>{{ AS.humidity }}</td>
                                <td>{{ AS.macAdress }}</td>
                                <td>{{ AS.room}}</td>
                            <td>
                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal{{ AS.id }}">
                                    Supprimer
                                </button>
                                <a href="{{ path('app_acquisition_syteme_edit', {id: AS.id}) }}" class="btn btn-warning">
                                    Modifier
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <!-- Bouton "Ajouter une Salle" en dehors du conteneur scrollable -->
            <div class="d-flex justify-content-end mt-3">
                <a href="{{ path('app_acquisition_syteme_add') }}">
                    <button type="submit" class="btn" style="background-color: #6a0dad; color: #fff;">Ajouter un SA</button>
                </a>
            </div>

            {%for AS in acquisition_systems%}
                <div class="modal fade" id="deleteModal{{ AS.id }}" tabindex="-1" aria-labelledby="deleteModalLabel{{ AS.id }}" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="deleteModalLabel{{ AS.id }}">Confirmer la suppression</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Êtes-vous sûr de vouloir supprimer l'AS "{{ AS.macAdress }}" ?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                <form action="{{ path('app_acquisition_syteme_delete', {id: AS.id}) }}" method="POST" style="display: inline;">
                                    <button type="submit" class="btn btn-danger">Supprimer</button>
                                </form>                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>




{% endblock %}