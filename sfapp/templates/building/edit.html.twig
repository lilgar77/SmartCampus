{% extends 'base.html.twig' %}

{% block title %}Modifier le bâtiment - {{ building.NameBuilding }}{% endblock %}

{% block body %}
    <div class="position-absolute top-0 start-0 quarter-circle"></div>
    <div class="position-absolute bottom-0 end-0 quarter-circle"></div>

    <div class="d-flex justify-content-center align-items-center vh-0">
        <img src="{{ asset('images/logo.png') }}" alt="Logo du campus" >
    </div>
    <!-- Conteneur pour les liens centré en haut, occupant toute la largeur -->
    <div class="container-fluid d-flex justify-content-center  p-3">
        <a href="{{ path('app_welcome') }}" class="mx-3 text-link">Accueil</a>
        <a href="{{ path('app_rooms') }}" class="mx-3 text-link">Plan</a>
    </div>

    <div class="container mt-5">
        <div class="card shadow-sm p-4">
            <h2 class="text-center mb-4">Modifier le bâtiment "{{ building.NameBuilding }}"</h2>
            <p class="text-muted text-center">Ce formulaire vous permet de modifier les informations du bâtiment.</p>

            <div class="row justify-content-center">
                <div class="col-md-8">
                    {{ form_start(buildingForm) }}
                    <div class="mb-3">
                    {{ form_label(buildingForm.NameBuilding, 'Nom du Bâtiment', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(buildingForm.NameBuilding, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(buildingForm.AdressBuilding, 'Adresse du bâtiment', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(buildingForm.AdressBuilding, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <!-- Ajoute d'autres champs du formulaire ici si nécessaire -->
                    <div class="text-center">
                        <button type="submit" class="btn" style="background-color: #6a0dad; color: #fff;">Sauvegarder les modifications</button>
                    </div>
                    {{ form_end(buildingForm) }}

                </div>
            </div>

            <div class="mt-4 text-center">
                <a href="{{ path('app_building') }}" class="btn btn-secondary">Retour à la liste des bâtiments</a>
            </div>
        </div>
    </div>
{% endblock %}