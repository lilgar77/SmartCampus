{#
##################################################################################################################################
# @Name of file : floor/index.html.twig                                                                                         ##
# @brief : Template for listing floors                                                                                          ##
# @Function : Displays a table of floors with options to delete or modify each floor. Includes a modal for confirming deletion. ##
####                                                                                                                            ##
# Uses Symfony's Twig engine to render a table of floors, allowing users to view, edit, or delete them.                         ##
#                                                                                                                               ##
##################################################################################################################################
#}
{% extends 'base.html.twig' %}

{% block title %}Liste des Etages{% endblock %}

{% block body %}
    <div class="position-absolute top-0 start-0 quarter-circle"></div>
    <div class="position-absolute bottom-0 end-0 quarter-circle"></div>

    <div class="d-flex justify-content-center align-items-center vh-0">
        <img src="{{ asset('images/logo.png') }}" alt="Logo du campus" >
    </div>
    <!-- Conteneur pour les liens centré en haut, occupant toute la largeur -->
    <div class="container-fluid d-flex justify-content-center  p-3">
        <a href="{{ path('app_welcome') }}" class="mx-3 text-link">Accueil</a>
        <a href="{{ path('app_rooms') }}" class="mx-3 text-link">Plan</a>
    </div>

    <nav class="navbar navbar-expand-lg table-violet table-responsive navbar-custom">
        <div class="container-fluid justify-content-center">
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto ms-auto">
                    <li class="nav-item me-3">  <!-- Utilisation de me-3 pour espacer -->
                        <a class="nav-link text-white" href="{{ path('app_rooms') }}">Salles</a>
                    </li>
                    <li class="nav-item me-3">
                        <a class="nav-link text-white" href="#">Systèmes d'acquisition</a>
                    </li>
                    <li class="nav-item me-3">
                        <a class="nav-link text-white" href="{{ path('app_building') }}">Bâtiments</a>
                    </li>
                    <li class="nav-item me-3">
                        <a class="nav-link text-dark text-decoration-underline active" aria-current="page" href="{{ path('app_floor') }}">Etages</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <div class="container mt-4">
        <div class="card shadow-sm p-4">
            <h1 class="h3 mb-4 text-center">Liste des Etages</h1>



            <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
                <table class="table table-striped table-bordered">
                    <thead class="table-violet sticky-header">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">NUMERO D'ETAGE</th>
                        <th scope="col">BATIMENT</th>
                        <th scope="col">ACTIONS</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for floor in floors %}
                        <tr>
                            <td>{{ floor.id }}</td>
                            <td>{{ floor.numberFloor }}</td>
                            <td>{{ floor.IdBuilding }}</td>
                            <td>
                                <!-- Bouton pour ouvrir le modal de suppression -->
                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal{{ floor.id }}">
                                    Supprimer
                                </button>

                                <!-- Lien pour modifier la salle -->
                                <a href="{{ path('app_floor_edit', {id: floor.id}) }}" class="btn btn-warning">
                                    Modifier
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <div class="d-flex justify-content-end mt-3">
                <a href="{{ path('app_floor_add') }}">
                    <button type="submit" class="btn" style="background-color: #6a0dad; color: #fff;">Ajouter un Etage</button>
                </a>
                </div>
            </div>

            <!-- Modal de confirmation de suppression -->
            {% for floor in floors %}
                <div class="modal fade" id="deleteModal{{ floor.id }}" tabindex="-1" aria-labelledby="deleteModalLabel{{ floor.id }}" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="deleteModalLabel{{ floor.id }}">Confirmer la suppression</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Êtes-vous sûr de vouloir supprimer l'étage "{{ floor.numberFloor }}" du bâtiment "{{ floor.IdBuilding}} ?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>

                                <!-- Formulaire POST pour supprimer la salle -->
                                <form action="{{ path('app_floor_delete', {id: floor.id}) }}" method="POST" style="display: inline;">
                                    <button type="submit" class="btn btn-danger">Supprimer</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}