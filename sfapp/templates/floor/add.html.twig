{% extends 'base.html.twig' %}

{% block title %}Ajouter un étage!{% endblock %}

{% block body %}


    <div class="container mt-5">
        <div class="card shadow-sm p-4">
            <h2 class="text-center mb-4">Ajouter un Etage</h2>

        {{ form_start(floorForm) }}
            <div class="mb-3">
                {{ form_label(floorForm.numberFloor, "Numéro d'étage",  {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(floorForm.numberFloor, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(floorForm.numberFloor, {'attr': {'class': 'text-danger'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(floorForm.IdBuilding, 'Bâtiment', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(floorForm.IdBuilding, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(floorForm.IdBuilding, {'attr': {'class': 'text-danger'}}) }}
            </div>



            <div class="text-center">
                <button type="submit" class="btn" style="background-color: #6a0dad; color: #fff;">Ajouter un Etage</button>
            </div>
            {{ form_end(floorForm) }}
            </div>
    </div>
{% endblock %}
